---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'A curated collection of awesome prompts for AI tools' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen transition-colors flex flex-col">
      <header class="site-header bg-white dark:bg-gray-800 shadow-sm" data-pagefind-ignore>
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between h-16 items-center">
            <a href="/" class="flex items-center space-x-3 group">
              <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-pink-600 rounded-xl flex items-center justify-center neu-border neu-shadow group-hover:translate-x-0.5 group-hover:translate-y-0.5 group-hover:shadow-[2px_2px_0_0_var(--color-border)] transition-all">
                <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 9L12 12L8 15" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M14 15H16" stroke="currentColor" stroke-width="2.5" stroke-linecap="round"/>
                </svg>
              </div>
              <div class="flex flex-col">
                <span class="text-xl font-black text-gray-900 dark:text-white tracking-tight leading-none">
                  Awesome<span class="text-purple-600 dark:text-purple-400">Prompts</span>
                </span>
                <span class="text-xs text-gray-500 dark:text-gray-400 font-medium hidden sm:block">Curated AI Prompts</span>
              </div>
            </a>
            
            <!-- Desktop Navigation -->
            <div class="hidden md:flex items-center space-x-4">
              <a href="/search" class="text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                Search
              </a>
              <a href="/tags" class="text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                Tags
              </a>
              <a href="/favorites" class="text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors flex items-center gap-1">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" />
                </svg>
                Favorites
              </a>
              <a 
                href="https://github.com/samuxbuilds/awesome-prompts/issues/new?template=new-prompt.md" 
                target="_blank"
                rel="noopener noreferrer"
                class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-bold neu-border neu-shadow transition-all neu-shadow-hover"
              >
                Submit Prompt
              </a>
              <button 
                id="theme-toggle" 
                class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 transition-all neu-border neu-shadow neu-shadow-hover"
                aria-label="Toggle dark mode"
              >
                <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
                </svg>
                <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
                </svg>
              </button>
            </div>

            <!-- Mobile Menu Button -->
            <div class="flex items-center gap-4 md:hidden">
              <button 
                id="mobile-theme-toggle" 
                class="p-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600 transition-all neu-border"
                aria-label="Toggle dark mode"
              >
                <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
                </svg>
                <svg class="w-5 h-5 block dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z" />
                </svg>
              </button>
              <button
                id="mobile-menu-btn"
                class="p-2 rounded-lg text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                aria-label="Toggle mobile menu"
              >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>
          </div>

          <!-- Mobile Menu -->
          <div id="mobile-menu" class="hidden md:hidden py-4 border-t border-gray-200 dark:border-gray-700">
            <div class="flex flex-col space-y-4">
              <a href="/search" class="text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors px-2 py-1">
                Search
              </a>
              <a href="/tags" class="text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors px-2 py-1">
                Tags
              </a>
              <a href="/favorites" class="text-gray-600 dark:text-gray-300 hover:text-purple-600 dark:hover:text-purple-400 transition-colors px-2 py-1 flex items-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" />
                </svg>
                Favorites
              </a>
              <a 
                href="https://github.com/samuxbuilds/awesome-prompts/issues/new?template=new-prompt.md" 
                target="_blank"
                rel="noopener noreferrer"
                class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-bold neu-border neu-shadow transition-all neu-shadow-hover text-center"
              >
                Submit Prompt
              </a>
            </div>
          </div>
        </nav>
      </header>
      
      <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow w-full">
        <slot />
      </main>
      
      <footer class="site-footer bg-white dark:bg-gray-800 mt-16" data-pagefind-ignore>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
            <p class="text-gray-600 dark:text-gray-400">
              Made with love by the community
            </p>
            <div class="flex space-x-6">
              <a href="https://x.com/samuxbuilds" target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors flex items-center gap-1">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                Follow
              </a>
              <a href="https://github.com/samuxbuilds/awesomeprompts" target="_blank" rel="noopener noreferrer" class="text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                GitHub
              </a>
              <a href="/contributing" class="text-gray-600 dark:text-gray-400 hover:text-purple-600 dark:hover:text-purple-400 transition-colors">
                Contributing
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>
    
    <script is:inline>
      function getTheme() {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      }

      function setTheme(theme) {
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
        localStorage.setItem('theme', theme);
      }

      // Initialize theme
      setTheme(getTheme());

      function setupThemeToggle() {
        const toggleBtns = [
          document.getElementById('theme-toggle'),
          document.getElementById('mobile-theme-toggle')
        ];
        
        toggleBtns.forEach(btn => {
          if (btn) {
            // Remove old listener to avoid duplicates if any
            const newBtn = btn.cloneNode(true);
            btn.parentNode.replaceChild(newBtn, btn);
            
            newBtn.addEventListener('click', () => {
              const isDark = document.documentElement.classList.contains('dark');
              setTheme(isDark ? 'light' : 'dark');
            });
          }
        });
      }

      function setupMobileMenu() {
        const btn = document.getElementById('mobile-menu-btn');
        const menu = document.getElementById('mobile-menu');
        
        if (btn && menu) {
          const newBtn = btn.cloneNode(true);
          btn.parentNode.replaceChild(newBtn, btn);
          
          newBtn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
          });
        }
      }

      // Initial setup
      setupThemeToggle();
      setupMobileMenu();
    </script>
    
    <!-- Cloudflare Web Analytics -->
    <!-- Replace YOUR_BEACON_TOKEN with your actual token from Cloudflare dashboard -->
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "YOUR_BEACON_TOKEN"}'></script>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;700;900&display=swap');
  
  :root {
    --border-width: 3px;
    --shadow-offset: 4px;
    --radius: 12px;
    
    /* Light Mode Colors */
    --color-bg: #f0f0f0;
    --color-surface: #ffffff;
    --color-text: #000000;
    --color-border: #000000;
    --color-primary: #8b5cf6; /* Violet */
    --color-secondary: #ec4899; /* Pink */
    --color-accent: #f59e0b; /* Amber */
  }

  .dark {
    /* Dark Mode Colors */
    --color-bg: #1a1a1a;
    --color-surface: #2d2d2d;
    --color-text: #ffffff;
    --color-border: #ffffff;
    --color-primary: #a78bfa;
    --color-secondary: #f472b6;
    --color-accent: #fbbf24;
  }
  
  html {
    font-family: 'Outfit', system-ui, sans-serif;
    background-color: var(--color-bg);
    color: var(--color-text);
  }
  
  body {
    min-height: 100vh;
    background-color: var(--color-bg);
  }

  /* Neubrutalism Utilities */
  .neu-border {
    border: var(--border-width) solid var(--color-border);
  }

  .neu-shadow {
    box-shadow: var(--shadow-offset) var(--shadow-offset) 0 0 var(--color-border);
  }

  .neu-shadow-hover:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 0 var(--color-border);
  }

  .neu-shadow-active:active {
    transform: translate(var(--shadow-offset), var(--shadow-offset));
    box-shadow: none;
  }
  
  /* Header specific */
  .site-header {
    border-bottom: var(--border-width) solid var(--color-border);
  }
  
  /* Footer specific */
  .site-footer {
    border-top: var(--border-width) solid var(--color-border);
  }
</style>
