---
import Layout from '../layouts/Layout.astro';
import CategoryCard from '../components/CategoryCard.astro';
import SearchBar from '../components/SearchBar.astro';
import MasonryCard from '../components/MasonryCard.astro';
import { readFile } from 'fs/promises';
import { join } from 'path';

// Read prompts from the generated JSON
let prompts: any[] = [];
try {
  const data = await readFile(join(process.cwd(), 'public', 'all-prompts.json'), 'utf-8');
  prompts = JSON.parse(data);
} catch (e) {
  // File might not exist during first build
  console.log('No prompts found yet. Run the build script first.');
}

// Group prompts by category
const categoryMap = new Map<string, number>();
prompts.forEach(prompt => {
  categoryMap.set(prompt.category, (categoryMap.get(prompt.category) || 0) + 1);
});

// Category icons
const categoryIcons: Record<string, string> = {
  thumbnails: 'ðŸ–¼ï¸',
  videos: 'ðŸŽ¬',
  illustrations: 'ðŸŽ¨',
  arts: 'ðŸŽ­',
  'people/woman': 'ðŸ‘©',
  'people/man': 'ðŸ‘¨',
};

const categories = Array.from(categoryMap.entries())
  .map(([name, count]) => ({
    name,
    count,
    icon: categoryIcons[name] || 'ðŸ“'
  }))
  .sort((a, b) => a.name.localeCompare(b.name));

const totalPrompts = prompts.length;

// Get recent prompts (first 8 for better masonry layout)
const recentPrompts = prompts.slice(0, 8);
---

<Layout title="AwesomePrompts - Curated AI Prompt Collection">
  <!-- Hero Section -->
  <section class="mb-12">
    <div class="bg-white dark:bg-gray-800 rounded-xl neu-border neu-shadow p-8 text-center">
      <h1 class="text-4xl font-black text-gray-900 dark:text-gray-100 mb-4 uppercase tracking-tight">
        Discover Amazing <span class="text-purple-600">AI Prompts</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto font-medium">
        A curated collection of {totalPrompts}+ prompts for thumbnails, videos, illustrations, and more. 
        Open-source and community-driven.
      </p>
      
      <div class="flex justify-center mb-8">
        <SearchBar placeholder="Search all prompts..." />
      </div>
      
      <div class="flex justify-center gap-4 flex-wrap">
        <a 
          href="https://github.com/samuxbuilds/awesomeprompts" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 rounded-lg font-bold hover:bg-gray-800 dark:hover:bg-gray-200 transition-all neu-border neu-shadow neu-shadow-hover"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
